{
  "plugins": {
    "release-it-pnpm": {}
  },
  "hooks": {
    "before:init": ["pnpm run lint", "pnpm run test"],
    "before:publish": "pnpm run build",
    "after:bump": "pnpm dlx changelogen"
  },
  "git": {
    "commitMessage": "chore: release ${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  }
}
